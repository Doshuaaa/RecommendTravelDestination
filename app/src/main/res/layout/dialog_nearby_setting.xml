<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/omyu_pretty"
            android:text="관광 종류"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_restaurant_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="5dp"
                        android:text="관광지"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="58dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_public_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="5dp"
                        android:text="문화시설"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="58dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_festival_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="5dp"
                        android:text="축제공연행사"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="58dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_tour_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="5dp"
                        android:text="여행코스"
                        tools:layout_editor_absoluteX="28dp"
                        tools:layout_editor_absoluteY="58dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_directions_run_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="10dp"
                        android:text="레포츠" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_bed_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="10dp"
                        android:text="숙박" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_shopping_bag_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="10dp"
                        android:text="쇼핑" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="7dp"
                        android:background="@drawable/round_nearby_option_button"
                        android:button="@drawable/baseline_restaurant_24"
                        android:fontFamily="@font/omyu_pretty"
                        android:padding="10dp"
                        android:text="음식점" />


                </RadioGroup>
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/omyu_pretty"
            android:text="검색 반경"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="230dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
